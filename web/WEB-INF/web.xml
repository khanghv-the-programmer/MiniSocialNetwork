        <servlet-name>MainController</servlet-name>
        <servlet-class>khanghv.controllers.MainController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoginController</servlet-name>
        <servlet-class>khanghv.controllers.LoginController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RegisterController</servlet-name>
        <servlet-class>khanghv.controllers.RegisterController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LogoutController</servlet-name>
        <servlet-class>khanghv.controllers.LogoutController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ArticleLoadingController</servlet-name>
        <servlet-class>khanghv.controllers.ArticleLoadingController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ArticleDetailController</servlet-name>
        <servlet-class>khanghv.controllers.ArticleDetailController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PostArticleController</servlet-name>
        <servlet-class>khanghv.controllers.PostArticleController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DeleteArticleController</servlet-name>
        <servlet-class>khanghv.controllers.DeleteArticleController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UploadCommentController</servlet-name>
        <servlet-class>khanghv.controllers.UploadCommentController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ReactionController</servlet-name>
        <servlet-class>khanghv.controllers.ReactionController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DeleteCommentController</servlet-name>
        <servlet-class>khanghv.controllers.DeleteCommentController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SendMailController</servlet-name>
        <servlet-class>khanghv.controllers.SendMailController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>VerifyController</servlet-name>
        <servlet-class>khanghv.controllers.VerifyController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CheckVerifyController</servlet-name>
        <servlet-class>khanghv.controllers.CheckVerifyController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>MainController</servlet-name>
        <url-pattern>/MainController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginController</servlet-name>
        <url-pattern>/LoginController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RegisterController</servlet-name>
        <url-pattern>/RegisterController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LogoutController</servlet-name>
        <url-pattern>/LogoutController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ArticleLoadingController</servlet-name>
        <url-pattern>/ArticleLoadingController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ArticleDetailController</servlet-name>
        <url-pattern>/ArticleDetailController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PostArticleController</servlet-name>
        <url-pattern>/PostArticleController</url-pattern>
